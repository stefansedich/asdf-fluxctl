#!/usr/bin/env bash

set -e
set -o pipefail

install_fluxctl() {
  local install_type=$1
  local version=$2
  local install_path=$3
  local platform="$(uname | tr '[:upper:]' '[:lower:]')_amd64"
  local bin_install_path="$install_path/bin"
  local binary_path="$bin_install_path/fluxctl"
  local download_url=$(get_download_url $version $platform)

  if [ "$TMPDIR" = "" ]; then
    local tmp_download_dir=$(mktemp -d -t fluxctl_XXXXXX)
  else
    local tmp_download_dir=$TMPDIR
  fi

  local download_path="$tmp_download_dir/$(get_filename $version $platform)"

  echo "Downloading fluxctl from ${download_url} to ${download_path}"
  curl -Lo $download_path $download_url

  echo "Creating bin directory"
  mkdir -p "${bin_install_path}"

  echo "Cleaning previous binaries"
  rm -f $binary_path 2>/dev/null || true

  echo "Copying binary"
  cp "${tmp_download_dir}/fluxctl_${platform}" ${binary_path}
  chmod +x ${binary_path}
}

get_filename() {
  local platform="$2"

  echo "fluxctl_${platform}"
}

get_download_url() {
  local version="$1"
  local platform="$2"
  local filename="$(get_filename $version $platform)"

  echo "https://github.com/fluxcd/flux/releases/download/${version}/${filename}"
}

install_fluxctl $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
